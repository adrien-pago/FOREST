@{
}

<div class="row">
    <div class="col-2">
        <partial name="_Sidenav" />
    </div>
 
    <div class="col-10 mt-4">
        <div class="d-flex flex-column">
            @if (TempData.ContainsKey("msgAdmin"))
            {
                <p class="text-center success-msg">@TempData["msgAdmin"] <i class="bi bi-check-circle"></i></p>
              @*   <p class="alert alert-success" id="successMessage">@TempData["Success"]</p> *@
            }
          
            <div class="d-flex justify-content-center">

                <form class="form-admin" asp-controller="ManageAccount" asp-action="CreateUserAdmin" asp-area="Account">
                    <div class="title">@ViewData["createUserA.header"]</div>
                    <div class="input-container input-container-1">
                        <input id="usernameId" class="input-create-admin" type="text" placeholder="@ViewData["createUser.username"]" asp-for="Username" />
                    </div>
                    <div class="input-container input-container-2">
                        <input id="passwordId" class="input-create-admin" type="text" placeholder="Mot de passe" asp-for="Password" value="@Model.Password" readonly />
                        <span class="icon-eye"><i class="fa-solid fa-eye pointer-cursor" id="togglePasswordAdmin"></i></span>

                        <span class="icon-copy"><i class="fa-solid fa-copy pointer-cursor" id="copyPaste"></i></span>
                    </div>

                    <button type="submit" class="submit">@ViewData["CreateUser.createBtn"]</button>
                </form>
            </div>
        </div>
  
</div>
  

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.success-msg').fadeOut(3000);
        });
    </script>
        }                        