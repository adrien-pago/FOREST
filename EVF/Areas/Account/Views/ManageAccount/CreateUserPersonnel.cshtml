@model PersonnelAccountModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-2">
        <partial name="_Sidenav" />
    </div>
  
    <div class="col-10 mt-5">
        <div class="d-flex flex-column">

            @if (TempData.ContainsKey("msgPersonnel"))
            {
                <p class="text-center success-msg">@TempData["msgPersonnel"] <i class="bi bi-check-circle"></i></p>
            }


            <div class="d-flex justify-content-center">
                <form class="form-personnel" asp-controller="ManageAccount" asp-action="CreateUserPersonnel" asp-area="Account">
                    <div class="title"> @ViewData["createUserP.header"] (Personnel)</div>
     

                    <div class="input-container input-container-2">
                        <select class="form-select-create-personnel form-select col-4" aria-label="Default select example" asp-items="@Model.PersonnelList" asp-for="IdPersonnelSel" id="selectedPersonnel">
                            <option selected value="4">@ViewData["createUserP.selectList"]</option>
                        </select>
                        <input value="" asp-for="Role" id="userRole" hidden />
                    </div>
                    <div class="input-container input-container-1">
                        <input id="usernameId" class="input-create-personnel" type="text" placeholder="@ViewData["createUser.username"]" asp-for="Username" readonly/>
                    </div>
                    <div class="input-container input-container-2">
                        <input id="passwordId" class="input-create-personnel" type="text" placeholder="Mot de passe" asp-for="Password" value="@Model.Password" readonly />
                        <span class="icon-eye"><i class="fa-solid fa-eye pointer-cursor" id="togglePasswordAdmin"></i></span>

                        <span class="icon-copy"><i class="fa-solid fa-copy pointer-cursor" id="copyPaste"></i></span>

                    </div>
                    <button type="submit" class="submit">@ViewData["CreateUser.createBtn"]</button>
                </form>
            </div>
        
        
        
        </div>

    </div>


</div>

@section Scripts {
    <script>
        $("#selectedPersonnel").on("change", (event) => {
            console.log("Status selected = ", $("#selectedPersonnel option:selected").val());
            var personnel = $("#selectedPersonnel option:selected").val();

            var role = personnel.split(/[0-9]/)[2];
            var userId = personnel.split("-")[1];

            console.log(role);

            $('#userRole').val(role);
            $('#usernameId').val(userId);

            console.log($('#userRole').val());
        });


        $(document).ready(function () {
            $('.success-msg').fadeOut(3000);
        });
    </script>
        }